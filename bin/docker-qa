#!/bin/sh
#
# @see https://github.com/SeleniumHQ/docker-selenium
#
# NB: Generate self-signed certificates before running, `./bin/docker-certs`
#
# @example
#
#   $ BROWSER=firefox BASE_URL=https://app:3000 ./bin/docker-qa
#
#   $ BASE_URL=https://evening-thicket-25194.herokuapp.com ./bin/docker-qa
#
# ------------------------------------------------------------------------------
set -e

docker-compose \
  -f docker-compose.yml \
  -f docker-compose.qa.yml \
  --project-name recovery \
  up --detach

docker attach recovery_qa