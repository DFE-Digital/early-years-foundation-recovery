#!/bin/sh
# ------------------------------------------------------------------------------
set -e

if [[ ! -z "$MSYSTEM" ]]; then
  echo "You are running Windows!"
  PREFIX="winpty"
else
  PREFIX=""
fi

$PREFIX docker-compose \
  -f docker-compose.yml \
  -f docker-compose.dev.yml \
  --project-name recovery \
  run \
  --rm app \
  yarn "$@"
