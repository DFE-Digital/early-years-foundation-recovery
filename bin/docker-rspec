#!/bin/sh
# ------------------------------------------------------------------------------
# If the working directory is not mounted as a volume, then `RAILS_MASTER_KEY`
# environment variable must be set using:
#
# "-e RAILS_MASTER_KEY=xxxx"
#
set -e

docker-compose \
  -f docker-compose.yml \
  -f docker-compose.test.yml \
  --project-name recovery \
  run \
  --volume="$PWD:/src" \
  --name recovery_rspec \
  --rm app \
  rspec "$@"
