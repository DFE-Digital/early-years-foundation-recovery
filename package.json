{
  "name": "eyfs-recovery",
  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --outdir=app/assets/builds",
    "build:css": "sass app/assets/stylesheets/application.scss app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps",
    "preinstall": "mkdir -p app/assets/builds",
    "copy:assets": "mkdir -p app/assets/builds/fonts app/assets/builds/images && cp -R node_modules/govuk-frontend/dist/govuk/assets/images/. app/assets/builds/images && cp -R node_modules/@fortawesome/fontawesome-free/webfonts/. app/assets/builds/fonts && sh -c 'if [ -d app/assets/fonts ]; then cp -R app/assets/fonts/. app/assets/builds/fonts; fi'",
    "lint": "npx stylelint app/assets/stylesheets/* --fix"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^8.0.12",
    "@stimulus-components/reveal": "^5.0.0",
    "accessible-autocomplete": "^3.0.1",
    "axios": "^1.12.0",
    "dfe-frontend": "^2.0.1",
    "esbuild": "^0.25.9",
    "govuk-frontend": "^5.11.1",
    "puppeteer": "^24.10.0",
    "sass": "^1.85.1"
  },
  "devDependencies": {
    "stylelint": "^16.9.0",
    "stylelint-config-gds": "^2.0.0"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-gds/scss"
    ]
  }
}
