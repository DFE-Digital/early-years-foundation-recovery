= render 'user/debug'

- content_for :page_title do
  = html_title t('register_custom_role.heading')

= govuk_back_link href: edit_registration_role_type_path

.govuk-grid-row
  .govuk-grid-column-two-thirds-from-desktop
    = form_for form, url: registration_role_type_other_path, method: :patch do |f|
      = f.govuk_error_summary

      = f.govuk_fieldset legend: { text: t('register_custom_role.heading') } do
        = f.govuk_text_field :role_type_other, label: { text: t('register_custom_role.body') }, aria: { required: true }

      = f.govuk_submit t('links.continue')
