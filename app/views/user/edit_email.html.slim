.govuk-grid-row
  .govuk-grid-column-two-thirds-from-desktop
    = form_for @user, url: { action: 'update_email' } do |form|
      = form.govuk_error_summary
      = form.govuk_fieldset legend: { text: 'Change email address' } do
        = form.govuk_email_field :email, autofocus: true, autocomplete: 'email', 'aria-required': true

      - if @user.pending_reconfirmation?
        p Currently waiting confirmation for: #{@user.unconfirmed_email}

      = form.govuk_submit t('links.save')

      p= govuk_link_to 'Cancel', user_path
