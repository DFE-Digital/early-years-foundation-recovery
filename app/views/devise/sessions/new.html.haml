- content_for :devise_sidebar do
  %h2.govuk-heading-m
    Don't have an account yet? 
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Create an early years training account", new_registration_path(resource_name), class: 'govuk-link'
    to access training material.

- content_for :devise_form do
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = f.govuk_error_summary
    = f.govuk_fieldset legend: { text: 'Sign in to early years training', tag: :h1, size: "l" } do
      %p.govuk-body
        Enter your details to sign in to your personal early years training account. These details are different to any other GOV.UK accounts you may use.
      = f.govuk_email_field :email, autofocus: true, autocomplete: "email", label: { text: "Email address" }, width: 'one-half'
      = f.govuk_password_field :password, autocomplete: "current-password", label: { text: "Password" }, width: 'one-half'
      .govuk-form-group
        = f.check_box :remember_me
        = f.label :remember_me
      = f.govuk_submit "Sign in"


= render "devise/shared/form_wrap"