.govuk-grid-row 
  .govuk-grid-column-two-thirds-from-desktop
    = govuk_back_link(href: root_path)
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      = f.govuk_error_summary
      = f.govuk_fieldset legend: { text: 'Sign in to early years training', tag: :h1, size: "l" } do
        %p.govuk-body
          Enter your details to sign in to your personal early years training account. These details are different to any other GOV.UK accounts you may use.
        = f.govuk_email_field :email, autofocus: true, autocomplete: "email", label: { text: "Email address" }, width: 'one-half'
        = f.govuk_password_field :password, autocomplete: "current-password", label: { text: "Password" }, width: 'one-half'
        .govuk-form-group
          = f.check_box :remember_me
          = f.label :remember_me
        %p.govuk-body
          = link_to "Forgot your password?", new_user_password_path(resource_name)
        %p.govuk-body
          = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
        = f.govuk_submit "Sign in"
  .govuk-grid-column-one-third-from-desktop
    .app-sidebar 
      %h2.govuk-heading-m
        Don't have an account yet? 
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "Create an early years training account", new_registration_path(resource_name), class: 'govuk-link'
        to access training material.
