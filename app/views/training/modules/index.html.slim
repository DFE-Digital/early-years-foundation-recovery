- content_for :head do
  = tag.meta name: 'turbo-visit-control', content: 'reload'

- content_for :page_title do
  = html_title t('about.title')

- content_for :hero do
  /= govuk_back_link href: root_path

  .govuk-grid-row class='govuk-!-margin-top-9'
    / figma uses 3/4s
    .govuk-grid-column-two-thirds
      h1.govuk-heading-xl class='govuk-!-margin-bottom-4'
        = t('about.heading')
      p.govuk-body-l
        = t('about.hero')

= m('about.course', all_modules: mods.count, published_modules: mods.reject(&:draft?).count)

- unless current_user
  .govuk-grid-row
    .govuk-grid-column-two-thirds
      .light-grey-box class='govuk-!-margin-bottom-4'
        = m('about.enrol')

        .govuk-button-group
          = govuk_button_link_to 'Create an account', new_user_registration_path
          .white-space-pre-wrap= ' or '
          = govuk_link_to 'sign in', new_user_session_path

/.govuk-grid-row
  .govuk-grid-column-full
    = govuk_accordion do |accordion|
      - mods.reject(&:draft?).map do |mod|
        - accordion.with_section(heading_text: mod.card_title, summary_text: mod.objective) do
          = m('about.summary', description: mod.description, criteria: mod.criteria)

      - accordion.with_section(heading_text: t('experts.heading'), summary_text: t('experts.summary')) do
        = m('experts.body')
